{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageName": {
            "type": "string"
        },
        "vnetName": {
            "type": "string"
        },
        "subnetName": {
            "type": "string"
        },
        "VM01Name": {
            "type": "string"
        },
        "DBUser": {
            "type": "string"
        },
        "DBPassword": {
            "type": "securestring"
        },
        "NodeVMSize": {
            "type": "string"
        },
        "VMOSType": {
            "type": "string"
        },
        "VMAdminUserName": {
            "type": "string",
            "minLength": 1
        },
        "VMAdminPassword": {
            "type": "securestring"
        },
        "VMNamePrefix": {
            "type": "string",
            "minLength": 1
        },
        "VMCount": {
            "type": "int"
        },
        "InfaDomainName": {
            "type": "string",
            "minLength": 4
        },
        "InfaDomainUser": {
            "type": "string",
            "minLength": 4
        },
        "InfaDomainPassword": {
            "type": "securestring",
            "minLength": 4
        },
        "InfaNodeNamePrefix": {
            "type": "string",
            "minLength": 4
        },
        "InfaKeyWord": {
            "type": "securestring",
            "minLength": 4
        },
        "baseUrl": {
            "type": "string"
        }
    },
    "variables": {
        "Index": 0,
        "VMPublicDNSName": "[toLower(concat(parameters('VMNamePrefix'), add(variables('Index'), 1), uniqueString(resourceGroup().id)))]",
        "VMNicNamePrefix": "[concat(parameters('VMNamePrefix'),'Nic')]",
        "VMSubnetRef": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/', parameters('subnetName'))]",

        "ExtScriptURI": "[parameters('baseUrl')]",
        "ExtWIScriptFile": "wininfainstaller.ps1",

        "InfaNode1Port": 6005,
        "InfaDBType": "MSSQLSERVER",
        "InfaDBName": "model",
        "InfaDBPort": "1433",

        "imagePublisher": "informatica",
        "imageOffer": "powercenter_10_multi_node_domain_image_byol-preview",
        "osVersion": "byol_win2012_for_pc_10"
    },
    "resources": [
        {
            "name": "[variables('VMPublicDNSName')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [ ],

            "tags": {
                "displayName": "publicip"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[variables('VMPublicDNSName')]"
                }
            }
        },
        {
            "name": "[concat(variables('VMNicNamePrefix'), add(variables('Index'), 1))]",
            "type": "Microsoft.Network/networkInterfaces",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', variables('VMPublicDNSName'))]"
            ],
            "tags": {
                "displayName": "niccard"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('VMSubnetRef')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('VMPublicDNSName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[concat(parameters('VMNamePrefix'), add(variables('Index'), 1))]",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('VMNicNamePrefix'), add(variables('Index'), 1))]"
            ],
            "plan": {
                "name": "[variables('osVersion')]",
                "publisher": "[variables('imagePublisher')]",
                "product": "[variables('imageOffer')]"
            },
            "tags": {
                "displayName": "nodevm"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('NodeVMSize')]"
                },
                "osProfile": {
                    "computerName": "[concat(parameters('VMNamePrefix'), add(variables('Index'), 1))]",
                    "adminUsername": "[parameters('VMAdminUsername')]",
                    "adminPassword": "[parameters('VMAdminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('imagePublisher')]",
                        "offer": "[variables('imageOffer')]",
                        "sku": "[variables('osVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "InfaOSDisk",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat('https://', parameters('storageName'), '.blob.core.windows.net/vhds/', parameters('VM01Name'), add(variables('Index'), 1), '.osdisk.vhd')]"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('VMNicNamePrefix'), add(variables('Index'), 1)))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "ScriptExtGVM",
                    "type": "extensions",
                    "location": "[resourceGroup().location]",
                    "apiVersion": "2015-06-15",
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', parameters('VMNamePrefix'), add(variables('Index'), 1))]"
                    ],
                    "tags": {
                        "displayName": "informaticaextension"
                    },
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.8",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "[concat(variables('ExtScriptURI'),  variables('ExtWIScriptFile'))]"
                            ]
                        },
                        "protectedSettings": {
                            "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -file ', variables('ExtWIScriptFile'), ' -domainHost ', concat(parameters('VMNamePrefix'), '1'), ' -domainName ', parameters('InfaDomainName'), ' -domainUser ', parameters('InfaDomainUser'), ' -domainPassword ', parameters('InfaDomainPassword'), ' -nodeName ', parameters('InfaNodeNamePrefix'), add(variables('Index'), 1), ' -nodePort ', variables('InfaNode1Port'), ' -dbType ', variables('InfaDBType'), ' -dbName ', variables('InfaDBName'), ' -dbUser ', parameters('DBUser'), ' -dbPassword ', parameters('DBPassword'), ' -dbHost ', parameters('VM01Name'), ' -dbPort ', variables('InfaDBPort'), ' -sitekeyKeyword ', parameters('InfaKeyWord'), ' -joinDomain ', variables('Index'), ' -osUserName ', parameters('VMAdminUserName'), ' -storageName ', parameters('storageName'), ' -storageKey ', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageName')), '2016-01-01').keys.key1)]"
                        }
                    }
                }
            ]
        }
    ],
    "outputs": {
        "fqdn": {
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',variables('VMPublicDNSName')),providers('Microsoft.Network', 'publicIPAddresses').apiVersions[0]).dnsSettings.fqdn]",
            "type": "string"
        },
        "ipaddress": {
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',variables('VMPublicDNSName')),providers('Microsoft.Network', 'publicIPAddresses').apiVersions[0]).ipAddress]",
            "type": "string"
        }
    }
}
