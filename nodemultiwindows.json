{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageName": {
            "type": "string"
        },
        "vnetName": {
            "type": "string"
        },
        "subnetName": {
            "type": "string"
        },
        "VM01Name": {
            "type": "string"
        },
        "DBUser": {
            "type": "string"
        },
        "DBPassword": {
            "type": "securestring"
        },
        "NodeVMSize": {
            "type": "string"
        },
        "VMOSType": {
            "type": "string"
        },
        "VMAdminUserName": {
            "type": "string",
            "minLength": 1
        },
        "VMAdminPassword": {
            "type": "securestring"
        },
        "VMNamePrefix": {
            "type": "string",
            "minLength": 1
        },
        "VMCount": {
            "type": "int"
        },
        "InfaDomainName": {
            "type": "string",
            "minLength": 4
        },
        "InfaDomainUser": {
            "type": "string",
            "minLength": 4
        },
        "InfaDomainPassword": {
            "type": "securestring",
            "minLength": 4
        },
        "InfaNodeNamePrefix": {
            "type": "string",
            "minLength": 4
        },
        "InfaKeyWord": {
            "type": "securestring",
            "minLength": 4
        }
    },
    "variables": {
        "VMPublicDNSName": "[toLower(concat(parameters('VMNamePrefix'), uniqueString(resourceGroup().id)))]",
        "VMNicNamePrefix": "[concat(parameters('VMNamePrefix'),'Nic')]",
        "VMSubnetRef": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/', parameters('subnetName'))]",

        "gatewayCount": "[sub(parameters('VMCount'), 1)]",

        "InfaCustomeVMImage": "https://ispstorenp.blob.core.windows.net/copiedvhds/BaseW12I10180220162-os-2016-02-18-7FFBC24.vhd",
        "ExtScriptURI": "https://raw.githubusercontent.com/vijayanand17/infascripts/master/",
        "ExtWIScriptFile": "wininfainstaller.ps1",

        "InfaNode1Port": 6005,
        "InfaDBType": "MSSQLSERVER",
        "InfaDBName": "model",
        "InfaDBPort": "1433",

        "imagePublisher": "informatica",
        "imageOffer": "powercenter_10_multi_node_domain_image_byol-preview",
        "osVersion": "byol_win2012_for_pc_10"
    },
    "resources": [
        {
            "name": "[concat(variables('VMPublicDNSName'), '1')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [ ],

            "tags": {
                "displayName": "publicip"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[concat(variables('VMPublicDNSName'), '1')]"
                }
            }
        },
        {
            "name": "[concat(variables('VMNicNamePrefix'), '1')]",
            "type": "Microsoft.Network/networkInterfaces",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', variables('VMPublicDNSName'), '1')]"
            ],
            "tags": {
                "displayName": "niccard"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('VMSubnetRef')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('VMPublicDNSName'), '1'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[concat(parameters('VMNamePrefix'), '1')]",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('VMNicNamePrefix'), '1')]"
            ],
            "plan": {
                "name": "[variables('osVersion')]",
                "publisher": "[variables('imagePublisher')]",
                "product": "[variables('imageOffer')]"
            },
            "tags": {
                "displayName": "nodevm"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('NodeVMSize')]"
                },
                "osProfile": {
                    "computerName": "[concat(parameters('VMNamePrefix'), '1')]",
                    "adminUsername": "[parameters('VMAdminUsername')]",
                    "adminPassword": "[parameters('VMAdminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('imagePublisher')]",
                        "offer": "[variables('imageOffer')]",
                        "sku": "[variables('osVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "InfaOSDisk",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat('https://', parameters('storageName'), '.blob.core.windows.net/vhds/', parameters('VM01Name'), '1', '.osdisk.vhd')]"
                        }
                    }
                },
                /*"storageProfile": {
                    "osDisk": {
                        "name": "VMDisk",
                        "osType": "windows",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "image": {
                            "uri": "[variables('InfaCustomeVMImage')]"
                        },
                        "vhd": {
                            "uri": "[concat('https://ispstorenp.blob.core.windows.net/copiedvhds/', 'InfaBaseShareTest1.multi.osdisk.vhd')]"
                        }
                    }
                },*/
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('VMNicNamePrefix'), '1'))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "ScriptExtGVM",
                    "type": "extensions",
                    "location": "[resourceGroup().location]",
                    "apiVersion": "2015-06-15",
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', parameters('VMNamePrefix'), '1')]"
                    ],
                    "tags": {
                        "displayName": "informaticaextension"
                    },
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.4",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "[concat(variables('ExtScriptURI'),  variables('ExtWIScriptFile'))]"
                            ]
                        },
                        "protectedSettings": {
                            "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -file ', variables('ExtWIScriptFile'), ' -domainHost ', concat(parameters('VMNamePrefix'), '1'), ' -domainName ', parameters('InfaDomainName'), ' -domainUser ', parameters('InfaDomainUser'), ' -domainPassword ', parameters('InfaDomainPassword'), ' -nodeName ', parameters('InfaNodeNamePrefix'), '1', ' -nodePort ', variables('InfaNode1Port'), ' -dbType ', variables('InfaDBType'), ' -dbName ', variables('InfaDBName'), ' -dbUser ', parameters('DBUser'), ' -dbPassword ', parameters('DBPassword'), ' -dbHost ', parameters('VM01Name'), ' -dbPort ', variables('InfaDBPort'), ' -sitekeyKeyword ', parameters('InfaKeyWord'), ' -joinDomain 0 -osUserName ', parameters('VMAdminUserName'), ' -storageName ', parameters('storageName'), ' -storageKey ', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageName')), '2015-05-01-preview').key1)]"
                        }
                    }
                }
            ]
        },
        {
            "name": "[concat(variables('VMPublicDNSName'), add(copyIndex(), 2))]",
            "type": "Microsoft.Network/publicIPAddresses",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [ ],
            "copy": {
                "name": "gatewayCount",
                "count": "[variables('gatewayCount')]"
            },
            "tags": {
                "displayName": "gwpublicip"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[concat(variables('VMPublicDNSName'), add(copyIndex(), 2))]"
                }
            }
        },
        {
            "name": "[concat(variables('VMNicNamePrefix'), add(copyIndex(), 2))]",
            "type": "Microsoft.Network/networkInterfaces",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', variables('VMPublicDNSName'), add(copyIndex(), 2))]"
            ],
            "copy": {
                "name": "gatewayCount",
                "count": "[variables('gatewayCount')]"
            },
            "tags": {
                "displayName": "gwniccard"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('VMSubnetRef')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('VMPublicDNSName'), add(copyIndex(), 2)))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[concat(parameters('VMNamePrefix'), add(copyIndex(), 2))]",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('VMNicNamePrefix'), add(copyIndex(), 2))]",
                "[concat('Microsoft.Compute/virtualMachines/', parameters('VMNamePrefix'), '1')]"
            ],
            "plan": {
                "name": "[variables('osVersion')]",
                "publisher": "[variables('imagePublisher')]",
                "product": "[variables('imageOffer')]"
            },
            "copy": {
                "name": "gatewayCount",
                "count": "[variables('gatewayCount')]"
            },
            "tags": {
                "displayName": "gwnodevm"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('NodeVMSize')]"
                },
                "osProfile": {
                    "computerName": "[concat(parameters('VMNamePrefix'), add(copyIndex(), 2))]",
                    "adminUsername": "[parameters('VMAdminUsername')]",
                    "adminPassword": "[parameters('VMAdminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('imagePublisher')]",
                        "offer": "[variables('imageOffer')]",
                        "sku": "[variables('osVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "InfaOSDisk",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat('https://', parameters('storageName'), '.blob.core.windows.net/vhds/', parameters('VM01Name'), add(copyIndex(), 2), '.osdisk.vhd')]"
                        }
                    }
                },
                /*"storageProfile": {
                    "osDisk": {
                        "name": "VMDisk",
                        "osType": "windows",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "image": {
                            "uri": "[variables('InfaCustomeVMImage')]"
                        },
                        "vhd": {
                            "uri": "[concat('https://ispstorenp.blob.core.windows.net/copiedvhds/', 'InfaBaseShareTest', add(copyIndex(), 2), '.multi.osdisk.vhd')]"
                        }
                    }
                },*/
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('VMNicNamePrefix'), add(copyIndex(), 2)))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "ScriptExtGVM",
                    "type": "extensions",
                    "location": "[resourceGroup().location]",
                    "apiVersion": "2015-06-15",
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', parameters('VMNamePrefix'), add(copyIndex(), 2))]"
                    ],
                    "tags": {
                        "displayName": "informaticaextension"
                    },
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.4",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "[concat(variables('ExtScriptURI'),  variables('ExtWIScriptFile'))]"
                            ]
                        },
                        "protectedSettings": {
                            "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -file ', variables('ExtWIScriptFile'), ' -domainHost ', concat(parameters('VMNamePrefix'), '1'), ' -domainName ', parameters('InfaDomainName'), ' -domainUser ', parameters('InfaDomainUser'), ' -domainPassword ', parameters('InfaDomainPassword'), ' -nodeName ', parameters('InfaNodeNamePrefix'), add(copyIndex(), 2), ' -nodePort ', variables('InfaNode1Port'), ' -dbType ', variables('InfaDBType'), ' -dbName ', variables('InfaDBName'), ' -dbUser ', parameters('DBUser'), ' -dbPassword ', parameters('DBPassword'), ' -dbHost ', parameters('VM01Name'), ' -dbPort ', variables('InfaDBPort'), ' -sitekeyKeyword ', parameters('InfaKeyWord'), ' -joinDomain 1 -osUserName ', parameters('VMAdminUserName'), ' -storageName ', parameters('storageName'), ' -storageKey ', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageName')), '2015-05-01-preview').key1)]"
                        }
                    }
                }
            ]
        }
    ],
    "outputs": {
        "fqdn1": {
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',concat(variables('VMPublicDNSName'), '1')),providers('Microsoft.Network', 'publicIPAddresses').apiVersions[0]).dnsSettings.fqdn]",
            "type": "string"
        },
        "ipaddress1": {
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',concat(variables('VMPublicDNSName'), '1')),providers('Microsoft.Network', 'publicIPAddresses').apiVersions[0]).ipAddress]",
            "type": "string"
        },
        "fqdn2": {
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',concat(variables('VMPublicDNSName'), '2')),providers('Microsoft.Network', 'publicIPAddresses').apiVersions[0]).dnsSettings.fqdn]",
            "type": "string"
        },
        "ipaddress2": {
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',concat(variables('VMPublicDNSName'), '2')),providers('Microsoft.Network', 'publicIPAddresses').apiVersions[0]).ipAddress]",
            "type": "string"
        }
    }
}